<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <style name="AppTheme" parent="AppBaseTheme"></style>
    <style name="NoTitleBar" parent="android:Theme.Light.NoTitleBar"></style>
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/transparent3</item>
    </style>
    <style name="title_layout_imgbtn">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/btn_pressed_bg_selector</item>
        <item name="android:src">@drawable/dialog_standard_return_icon</item>
    </style>
    <style name="title_layout_txtview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    
    <style name="homepage_rg_rb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableBottom">@drawable/homepage_top_chk_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="attention_friends_rg_rb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableBottom">@drawable/attention_friends_topbtn_selector</item>
        <item name="android:textColor">#7b7b7b</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
