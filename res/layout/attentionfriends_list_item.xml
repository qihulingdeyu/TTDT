<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp" >
    
    <ImageView android:id="@+id/friend_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_avatar_default"/>
    <TextView android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/friend_icon"
        android:layout_marginLeft="10dp"
        android:maxWidth="180dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#649ebf"
        android:textSize="18sp"
        android:text="KeXin可歆"/>
    <ImageView android:id="@+id/friend_user_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/friend_name"
        android:layout_alignTop="@+id/friend_name"
        android:layout_alignBottom="@+id/friend_name"
        android:layout_marginLeft="5dp"
        android:src="@drawable/user_v"/>
    <TextView android:id="@+id/friend_fans_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_name"
        android:layout_alignLeft="@+id/friend_name"
        android:textColor="#a0a0a0"
        android:text="粉丝： 34232"/>
    <TextView android:id="@+id/friend_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_fans_count"
        android:layout_alignLeft="@+id/friend_name"
        android:maxWidth="180dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#abafb1"
        android:textSize="12sp"
        android:text="原创女歌手"/>
    
    <Button android:id="@+id/add_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/dialog_btn_normal"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="加关注"/>

</RelativeLayout>
