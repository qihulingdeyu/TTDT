<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp"
    android:orientation="horizontal">

    <CheckBox android:id="@+id/musiclist_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:button="@null"
        android:background="@drawable/music_favourite_selector"/>
    <ImageView android:id="@+id/list_play_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:src="@drawable/list_play_state"/>
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/musiclist_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="280dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="歌曲"
        android:textColor="#ffffff"
        android:textSize="16sp" />
    <TextView android:id="@+id/musiclist_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="#ffffff"
        android:text="王菲"/>
    </LinearLayout>
    
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView android:id="@+id/song_pizhi_type"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:src="@drawable/media_hq"/>
    <Button
        android:id="@+id/media_item_menu"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:alpha="0.8"
        android:background="@drawable/btn_pressed_bg_selector"
        android:drawableBottom="@drawable/media_item_menu" />
    </RelativeLayout>
</LinearLayout>
